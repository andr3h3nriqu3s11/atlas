{
  "compilerOptions": {
    "target": "es2017",                                  
    "module": "commonjs",                                
    "esModuleInterop": true,                            
    "forceConsistentCasingInFileNames": true,            
    "skipLibCheck": true,                                
    "baseUrl": ".",
    "outDir": "dist",
    "paths": {
      "*": ["node_modules/*"],
      "app/*": ["app/*"],
      "@/*": ["app/*"],
      "@ref/*": ["ref/*"]
    }
  },
  "include": ["app", "ref"]
}
